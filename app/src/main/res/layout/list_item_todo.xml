<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
               >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/list_item_todo_priority_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="4dp"
            tools:ignore="RtlHardcoded"/>

        <TextView
            android:id="@+id/list_item_todo_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/list_item_todo_priority_check_box"
            android:padding="4dp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded"
            tools:text="ToDo Title"/>

        <TextView
            android:id="@+id/list_item_todo_date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/list_item_todo_title_text_view"
            android:padding="4dp"
            tools:text="ToDo Date"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>