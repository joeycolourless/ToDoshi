<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/list_item_todo_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="4dp"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded"
                tools:text="ToDo Title" />

            <TextView
                android:id="@+id/list_item_todo_date_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/list_item_todo_title_text_view"
                android:padding="4dp"
                tools:text="ToDo Date" />

            <ImageView
                android:id="@+id/notification_status_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/list_item_todo_date_text_view"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_notifications_off_black_24dp" />

            <ImageView
                android:id="@+id/priority_status_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/list_item_todo_date_text_view"
                android:layout_toLeftOf="@+id/notification_status_image_view"
                android:layout_toStartOf="@+id/notification_status_image_view"
                app:srcCompat="@drawable/ic_priority_high_black_24dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>