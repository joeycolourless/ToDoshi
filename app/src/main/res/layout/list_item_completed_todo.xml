<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview_title_todo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_marginEnd="27dp"
                android:layout_marginRight="27dp"
                android:layout_toLeftOf="@+id/textview_success_todo"
                android:layout_toStartOf="@+id/textview_success_todo"
                android:maxLength="50"
                android:maxLines="1"
                android:padding="4dp"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded"
                tools:text="ToDo Title" />

            <TextView
                android:id="@+id/textview_details_todo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textview_title_todo"
                android:maxLines="2"
                android:padding="4dp"
                tools:text="ToDo Details" />

            <TextView
                android:id="@+id/textview_success_todo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textview_details_todo"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:paddingRight="4dp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>